{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "moduleDetection": "force",
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "resources",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": [
      "vite/client",
      "node"
    ]
  },
  "include": [
    "**/*.d.ts",
    "resources/**/*.js",
    "resources/**/*.ts",
    "vite.config.ts",
    "resources/styles.tsx",
    "**/*.d.ts",
    "resources/**/*.tsx",
    "resources/**/*.ts",
    "vite.config.ts",
  ],
}
